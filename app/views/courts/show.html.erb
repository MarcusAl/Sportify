<%= render 'pages/navbar2' %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-8">
      <% if @court.photos.attached? %>
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <% @court.photos.each do |photo| %>
              <div class="carousel-item active">
                <%= cl_image_tag photo.key, alt: "alttext", class: 'd-block w-100' %>
              </div>
            <% end %>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      <% end %>
      <div class="court-show-container">
        <div class="description">
          <h3>Description</h3>
          <p><%= @court.description %> </p>
        </div>
        <div class="info">
          <p>Price: <strong>Â£<%= @court.price %>/Hr</strong></p>
          <p>Category: <%= @court.category %> </p>
          <p>Surface: <%= @court.surfaces %> </p>
          <p>Address: <%= @court.address %></p>
        </div>
      </div>
      <div class="map-container">
        <img src="https://www.freecountrymaps.com/map/free/great_britain/wimbledon-map-great_britain-423749783.png" alt="">
      </div>
      <div class="court-show-btns">
        <div class="court-buttons">
          <%= link_to "Back", courts_path, class: "btn btn-secondary" %>
          <%= link_to "Book this court", new_court_booking_path(@court), class: "btn btn-success" %>
        </div>
      </div>
      </div>
    </div>
  </div>
</div>












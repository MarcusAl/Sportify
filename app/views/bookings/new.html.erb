<%= render 'pages/navbar2' %>

<div class="container ">
  <div class="row justify-content-center mt-3">
    <div class="col-6 bg-light p-4 rounded">

      <%= simple_form_for [@user, @court, @booking] do |f| %>
      <%= f.input :start_time, label: "From", as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= f.input :end_time, label: "To", as: :string, required: false, input_html: {class: "datepicker"} %>
      <div class="container ">
        <div class="row justify-content-center">
          <div class="col-3 m-3">
          <%= f.submit class: "btn btn-primary p-2 rounded"%>
          </div>
        </div>
        <%= link_to "Go Back", court_path(@court.id), class: "btn btn-secondary p-2 rounded" %>
      </div>
    <% end %>
    </div>
  </div>
</div>

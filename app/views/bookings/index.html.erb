<%= render 'pages/navbar2' %>

<div class="courts-container">
  <div class="row mt-3 mx-auto">
    <% @bookings.each do |booking| %>
    <div class="col-4 justify-content-center">
      <div class="bookings-card rounded mdl-card mt-3 mdl-shadow--2dp">
        <div class="mdl-card__title mdl-card--expand">
          <h2 class="mdl-card__title-text">Update</h2>
           <% if booking.court.photos.attached? %>
          <%= link_to cl_image_tag(booking.court.photos[0].key), courts_path, alt: "image", class: "mg-fluid center-block", crop: :fill %>
          <% else %>
            <%= image_tag "https://www.openplay.co.uk/uploads/6Z9XOO8BE6cxIW6b-600x_.jpg", alt: "alttext", class: "img-fluid center-block"%>
          <% end %>
        </div>
        <div class="mdl-card__supporting-text text-center">
          <p><%= booking.court.address %></p>
        </div>
        <div class="row card-booking-desc">
          <div class="col-6">
            <div class="mdl-card__actions mdl-card--border">
              <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
                <p>Start: <%= booking.start_time %></p>
                <p>End: <%= booking.end_time %></p>
              </a>
            </div>
          </div>
          <div class="col-6">
            <div class="mdl-card__actions mdl-card--border">
              <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
                <p>End: <%= booking.end_time %></p>
              </a>
            </div>
          </div>
        
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>













<div class="container">
<% if user_signed_in? %>
<%= link_to "Signed Out",  destroy_user_session_path, method: :delete %>
<% else %>
<%= link_to "Go to Login", user_session_path %>
<% end %>

<div class="row justify-content-center">
  <div class="col-6 m-3">
    <% @bookings.each do |booking| %>
      <div class="border m-3">
        <div class="card-img">
          <% if booking.court.photos.attached? %>
            <%= cl_image_tag booking.court.photos[0].key, alt: "alttext", height: 100, width: 120, crop: :fill %>
          <% else %>
            <%= image_tag "https://www.openplay.co.uk/uploads/6Z9XOO8BE6cxIW6b-600x_.jpg", alt: "alttext" %>
          <% end %>
        </div>
        <h4><%= booking.start_time %></h4>
        <h4><%= booking.end_time %></h4>
      </div>
    <% end %>
</div>


